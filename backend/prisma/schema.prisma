generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
  maxConnections = 10
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Car {
  id Int @id @default(autoincrement())
  brand String
  model String
  accelSec Float
  topSpeedKmh Int
  rangeKm Int
  efficiencyWhKm Int
  fastChargeKmH Int?
  rapidCharge Boolean
  powerTrain PowerTrain
  plugType String
  bodyType String
  segment String
  seats Int
  priceEuro Int
  date DateTime
}

enum PowerTrain {
  AWD
  FWD
  RWD
}